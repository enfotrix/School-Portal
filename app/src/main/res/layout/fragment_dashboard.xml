<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_bg"
    android:orientation="vertical"
    android:backgroundTint="@color/colorPrimary"
    tools:context=".ui.dashboard.DashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:backgroundTint="@color/colorPrimaryDark"
        android:background="@drawable/blue_bg"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STUDENT"
            android:fontFamily="@font/poppins_light"
            android:textSize="@dimen/heading1"
            android:textColor="@color/text"></TextView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/text"
            android:elevation="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:elevation="4dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="4dp">

                    <ImageView
                        android:id="@+id/img_profile_student"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_launcher_background"></ImageView>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/txt_name_student"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Nazeer Basheera"
                    android:textColor="@color/text2"></TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/shape_line"></View>

                <Button
                    android:id="@+id/btn_marks_student"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/shape_btn"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/white"
                    android:paddingVertical="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="25dp"
                    android:text="View Marks"
                    android:textColor="@color/white"
                    android:textSize="13dp">
                </Button>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Father Name"
                            android:textColor="@color/text2"
                            android:textSize="16dp"></TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/shape_line"></View>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Registration #"
                            android:textColor="@color/text2"
                            android:textSize="16dp"></TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/shape_line"></View>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Class"
                            android:textColor="@color/text2"
                            android:textSize="16dp"></TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/shape_line"></View>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Section"
                            android:textColor="@color/text2"
                            android:textSize="16dp"></TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/shape_line"></View>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Class Teacher"
                            android:textColor="@color/text2"
                            android:textSize="16dp"></TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/shape_line"></View>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Medium"
                            android:textColor="@color/text2"
                            android:textSize="16dp"></TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/shape_line"></View>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="B-Form #"
                            android:textColor="@color/text2"
                            android:textSize="16dp"></TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/shape_line"></View>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Date of birth"
                            android:textColor="@color/text2"
                            android:textSize="16dp"></TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/shape_line"></View>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Contact"
                            android:textColor="@color/text2"
                            android:textSize="16dp"></TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/shape_line"></View>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:fontFamily="@font/poppins_regular"
                            android:text="Postal Address"
                            android:textColor="@color/text2"
                            android:textSize="16dp"></TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_fatherName_student"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxHeight="25dp"
                            android:layout_marginTop="30dp"
                            android:fontFamily="@font/poppins_light"
                            android:text="Malik Muhammad Basheer Awan"
                            android:textColor="@color/text2"
                            android:textSize="16dp"></TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="-50dp"
                            android:background="@drawable/shape_line"></View>

                        <TextView
                            android:id="@+id/text_regNumber_student"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/poppins_light"
                            android:text="SP19-197-3B"
                            android:textColor="@color/text2"
                            android:textSize="16dp"></TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="-50dp"
                            android:background="@drawable/shape_line"></View>


                        <TextView
                            android:id="@+id/txt_class_student"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/poppins_light"
                            android:text="6th"
                            android:textColor="@color/text2"
                            android:textSize="16dp"></TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="-50dp"
                            android:background="@drawable/shape_line"></View>

                        <TextView
                            android:id="@+id/txt_section_student"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/poppins_light"
                            android:text="Iqbal"
                            android:textColor="@color/text2"
                            android:textSize="16dp"></TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="-50dp"
                            android:background="@drawable/shape_line"></View>

                        <TextView
                            android:id="@+id/txt_class_teacher"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/poppins_light"
                            android:text="Prof. Jamshaid"
                            android:textColor="@color/text2"
                            android:textSize="16dp"></TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="-50dp"
                            android:background="@drawable/shape_line"></View>
                        <TextView
                            android:id="@+id/txt_class_medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/poppins_light"
                            android:text="English"
                            android:textColor="@color/text2"
                            android:textSize="16dp"></TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="-50dp"
                            android:background="@drawable/shape_line"></View>
                        <TextView
                            android:id="@+id/txt_NIC_student"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/poppins_light"
                            android:text="38403-3030300-7"
                            android:textColor="@color/text2"
                            android:textSize="16dp"></TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="-50dp"
                            android:background="@drawable/shape_line"></View>

                        <TextView
                            android:id="@+id/txt_dob_student"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/poppins_light"
                            android:text="16-Dec-1996"
                            android:textColor="@color/text2"
                            android:textSize="16dp"></TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="-50dp"
                            android:background="@drawable/shape_line"></View>

                        <TextView
                            android:id="@+id/txt_contact_student"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:fontFamily="@font/poppins_light"
                            android:text="03000000000"
                            android:textColor="@color/text2"
                            android:textSize="16dp"></TextView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="-50dp"
                            android:background="@drawable/shape_line"></View>

                        <TextView
                            android:id="@+id/txt_address_student"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:fontFamily="@font/poppins_light"
                            android:text="House # 00 , Street # 00 , University Road Sargodha"
                            android:textColor="@color/text2"
                            android:textSize="16dp"></TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>

</LinearLayout>